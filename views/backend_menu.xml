<odoo>
  <data>

    <!-- Tree View -->
    <record id="view_menu_item_tree" model="ir.ui.view">
      <field name="name">restaurant.menu.item.tree</field>
      <field name="model">restaurant.menu.item</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="price"/>
          <field name="category_id"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="view_menu_item_form" model="ir.ui.view">
      <field name="name">restaurant.menu.item.form</field>
      <field name="model">restaurant.menu.item</field>
      <field name="arch" type="xml">
        <form string="Menu Item">
          <sheet>
            <group>
              <field name="name"/>
              <field name="description"/>
              <field name="price"/>
              <field name="category_id"/>
              <field name="image"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record id="action_menu_item" model="ir.actions.act_window">
      <field name="name">Menu Items</field>
      <field name="res_model">restaurant.menu.item</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_food_items"
              name="Menu Items"
              parent="menu_restaurant_root"
              action="action_menu_item"
              sequence="2"/>
              
  </data>
</odoo>
