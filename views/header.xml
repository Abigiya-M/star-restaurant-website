<odoo>
  <template id="custom_header" inherit_id="website.layout" name="Star Restaurant Animated Header">
    <xpath expr="//header" position="replace">
      <header id="star-header" class="header-transparent fixed-top">
        <nav class="navbar navbar-expand-lg py-3">
          <div class="container ps-2 pe-2">
            <!-- Logo -->
            <a class="navbar-brand icon-container" href="/" style="position: relative; display: inline-block;">
              <img src="/star_Restaurant/static/src/img/logo.png" alt="Star Restaurant Logo"
                   class="logo-default" style="height: 80px; max-height: 80px;" />
            </a>

            <!-- Navigation Links -->
            <div class="nav navbar-nav d-none d-lg-flex align-items-center flex-row" style="z-index: 10000;">
              <a href="/" class="nav-link text-white mx-3 fw-semibold nav-item-hover">Home</a>
              <a href="/menu" class="nav-link text-white mx-3 fw-semibold nav-item-hover">Menu</a>
              <a href="/reservation_page" class="nav-link text-white mx-3 fw-semibold nav-item-hover">Reservation</a>
            </div>

            <!-- Hamburger button for mobile -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    style="border:none; color: white;">
              <span class="fa fa-bars" style="font-size: 1.5rem;"></span>
            </button>

            <!-- Collapsible menu -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <div class="nav navbar-nav d-flex align-items-center flex-column flex-lg-row w-100" style="z-index: 10000;">
                <div class="d-flex d-lg-none flex-column w-100">
                  <a href="/" class="nav-link text-white fw-semibold" style="padding: 10px 0;">Home</a>
                  <a href="/menu" class="nav-link text-white fw-semibold" style="padding: 10px 0;">Menu</a>
                  <a href="/reservation_page" class="nav-link text-white fw-semibold" style="padding: 10px 0;">Reservation</a>
                </div>
              </div>
            </div>

          </div>
        </nav>
      </header>

      <t t-jquery="body" t-operation="append">
        <script>
          document.addEventListener('DOMContentLoaded', () => {
            const header = document.getElementById('star-header');
            window.addEventListener('scroll', () => {
              if (window.scrollY > 50) {
                header.classList.add('scrolled');
              } else {
                header.classList.remove('scrolled');
              }
            });
          });
        </script>
        <style>
          #star-header {
            transition: background-color 0.4s ease, box-shadow 0.4s ease;
            background: rgba(0, 0, 0, 0.4);
            animation: fadeInDown 1s ease forwards;
          }
          #star-header.scrolled {
            background: rgba(0, 0, 0, 0.95);
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
          }
          @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
          }
          .nav-item-hover {
            position: relative;
            transition: color 0.3s ease;
          }
          .nav-item-hover::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: #fff;
            transition: all 0.3s ease;
          }
          .nav-item-hover:hover {
            color: #ffc107 !important;
          }
          .nav-item-hover:hover::after {
            left: 25%;
            width: 50%;
          }
        </style>
      </t>
    </xpath>
  </template>
</odoo>
